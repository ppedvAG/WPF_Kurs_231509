<Window x:Class="WPFKurs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFKurs"
        mc:Ignorable="d"
        Title="MainWindow" Height="288" Width="380">

    <Window.Content>

        <StackPanel Background="LightGreen">
            <TextBox Margin="20, 10, 5, 1" Text="Inhalt"/>
            <Button Margin="10" 
                    HorizontalAlignment="Center" 
                    x:Name="Btn_KlickMich" 
                    FontSize="20"
                    Width="200"
                    FontFamily="Comic Sans MS"
                    Click="Btn_KlickMich_Click">

                <Button.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="LightBlue" Offset="0"/>
                        <GradientStop Color="HotPink" Offset="1"/>
                    </LinearGradientBrush>
                </Button.Background>

                Okay
                
            </Button>

            <Button>
                <TextBox Width="150"/>
            </Button>

        </StackPanel>

    </Window.Content>

</Window>
