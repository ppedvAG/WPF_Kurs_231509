<Window x:Class="DataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="357" Width="280">
    <StackPanel Margin="10">

        <StackPanel x:Name="Spl_DataContextBsp">
            <StackPanel.DataContext>
                <local:Person/>
            </StackPanel.DataContext>

            <TextBox Text="{Binding Path=Name}"/>
            <TextBlock Text="{Binding Alter}"/>
            <TextBlock Text="{Binding WichtigeTage[1].DayOfWeek}"/>
            <TextBlock Text="{Binding LetzterTag}"/>
            <Button Content="Show" Click="Button_Click"/>
            <Button Content="Altern" Click="Button_Click_1"/>

        </StackPanel>

        <ListBox x:Name="Lbx_Personen" Height="150"
                 ItemsSource="{Binding Personenliste}"/>
        <Button x:Name="Btn_Add" Content="Neue Person" Click="Btn_Add_Click"/>
        <Button x:Name="Btn_Delete" Content="Lösche Person" Click="Btn_Delete_Click"/>
    </StackPanel>
</Window>
